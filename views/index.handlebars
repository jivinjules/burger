<div class="container">

    <h1>Welcome to Burger Hub!</h1>

    {{!-- ALL THE BURGERS TO EAT --}}
    <div class="row">
        <div class="col-md-4 ">
            <div class="card-header">
                <h3>These burgers are waiting to be devoured!</h3>

            </div>
            {{!--
            <div class="card-body"> --}} {{!--
                <ul> --}} {{#each burgers}} {{#unless devoured}}
                    <div class="card">
                        {{> burgers/burger-block devour = true}}</div> {{/unless}} {{/each}} {{!-- </ul> --}} {{!-- </div>
            --}}
        </div>


        <div class="col-md-4">

            <div class="card-header" id="add">
                <h2>Add a burger</h2>
            </div>
            <form class="create-form">
                <div class="form-group">
                    <br>
                    <label for="bur">Enter a burger:</label>
                    <input type="text" id="bur" name="burger_name">

                </div>


                <div class="form-group">
                    <label for="devoured">Devour it now or devour it later?</label>
                    <br>
                    <input type="radio" name="devoured" value="1" checked> Hungry! Devour it now!
                    <br>
                    <input type="radio" name="devoured" value="0"> Save it for later.
                </div>

                <button id="submit" type="submit">Add your Burger</button>
            </form>


            <img src="./images/hamburger.png" alt="hamburger">



        </div>

        {{!-- DEVOURED BURGER BOXES --}}

        <div class="col-md-4">
            <div class="card-header" id="devoured">

                <h3>These burgers have already been devoured!</h3>
            </div>
            {{!--
            <div class="card-body"> --}} {{!--
                <ul> --}} {{#each burgers}} {{#if devoured}}
                    <div class="card"> {{> burgers/burger-block devour=false}}</div> {{/if}} {{/each}} {{!-- </ul>
            </div> --}}
        </div>
    </div>
    <br>




</div>